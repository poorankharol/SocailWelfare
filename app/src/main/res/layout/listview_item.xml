<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@drawable/labour1" />
    <TextView
        android:layout_toRightOf="@+id/img"
        android:id="@+id/namelabel"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="@string/namelabel" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/namelabel" />

    <TextView
        android:layout_toRightOf="@+id/img"
        android:id="@+id/categorylabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/namelabel"
        android:text="@string/categorylabel" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/categorylabel" />

    <TextView
        android:layout_toRightOf="@+id/img"
        android:id="@+id/placelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/categorylabel"
        android:text="@string/placelabel" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/category"
        android:layout_toRightOf="@+id/placelabel" />

</RelativeLayout>